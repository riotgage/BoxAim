<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BoxAim" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryred</item>
        <item name="colorPrimaryVariant">@color/secondaryred</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="colorAccent">@color/primaryred</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/secondaryblue</item>
        <item name="colorOnSecondary">@color/white</item>

    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/search</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="color">@color/white</item>
        <item name="boxBackgroundColor">@null</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="queryHint">@string/search_hint</item>
        <!-- Text Color on search view expanded -->
        <item name="android:editTextColor">@android:color/white</item>

    </style>

    <style name="Theme.Search" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryred</item>
        <item name="colorPrimaryVariant">@color/secondaryred</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/secondaryblue</item>
        <item name="colorOnSecondary">@color/white</item>

    </style>
    <style name="AppTheme.Toolbar" parent="Theme.BoxAim">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>